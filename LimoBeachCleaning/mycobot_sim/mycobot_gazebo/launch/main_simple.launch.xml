<?xml version="1.0" encoding="UTF-8"?>
<launch>

    <include file="$(find-pkg-share mycobot_gazebo)/launch/start_world.launch.py">
        <arg name="world" value="$(find-pkg-share mycobot_gazebo)/worlds/simple.world"/>
        <arg name="gzweb" value="False"/>
    </include>

    <include file="$(find-pkg-share mycobot_gazebo)/launch/spawn.launch.xml">
            <arg name="robot_name" value="mycobot_280_1"/>
            <arg name="x_spawn" value="0.0"/>
            <arg name="y_spawn" value="0.0"/>
            <arg name="z_spawn" value="0.0309"/>
            <arg name="roll_spawn" value="0.0"/>
            <arg name="pitch_spawn" value="0.0"/>
            <arg name="yaw_spawn" value="0.0"/>
    </include>

    <include file="$(find-pkg-share mycobot_gazebo)/launch/start_gripper_control.launch.py"/>


</launch>